{
	"hooks": {
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "npm run format"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/check-code-review.py"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "jq -r '.tool_input.file_path' | xargs npx prettier --write"
					},
					{
						"type": "command",
						"command": "jq -r '.tool_input.file_path' | xargs npx eslint --fix"
					}
				]
			}
		]
	}
}
